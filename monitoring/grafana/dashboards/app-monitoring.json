{
  "dashboard": {
    "id": null,
    "title": "Application Monitoring",
    "tags": ["devops", "applications"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Application Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "python_app_requests_total",
            "legendFormat": "Python Requests"
          },
          {
            "expr": "nodejs_app_requests_total", 
            "legendFormat": "Node.js Requests"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Application Status",
        "type": "stat",
        "targets": [
          {
            "expr": "python_app_up",
            "legendFormat": "Python App"
          },
          {
            "expr": "nodejs_app_up",
            "legendFormat": "Node.js App"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "python_app_db_connections",
            "legendFormat": "Python DB Connections"
          },
          {
            "expr": "nodejs_app_db_connections",
            "legendFormat": "Node.js DB Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}